<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hostorjoin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="44dp"
        android:layout_margin="25dp">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/ipportview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/hostChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOST"
            android:onClick="hostChat"
            android:layout_marginBottom="80dp" />

        <TextView
            android:id="@+id/ipLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter IP"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/enterIP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="24"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/portLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Port"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/enterPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="24"
            android:inputType="number"
            android:text="" />

        <Button
            android:id="@+id/joinChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JOIN"
            android:onClick="joinChat"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>